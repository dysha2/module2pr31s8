<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="module2pr31s8.LoginPage" >
    <ContentPage.Content>
        <StackLayout BackgroundColor="#32B898">
            <Image Source="picture2.png" HorizontalOptions="Center"/>
            <Entry Placeholder="Имя пользователя" WidthRequest="300" HorizontalOptions="Center" Margin="0,20" BackgroundColor="White" x:Name="EntryLogin"/>
            <Entry Placeholder="Пароль" WidthRequest="300" HorizontalOptions="Center" Margin="0,20" BackgroundColor="White" x:Name="EntryPassword" IsPassword="True"/>
            <Button Text="Войти" FontSize="18" HorizontalOptions="Center"
                VerticalOptions="End" Clicked="Registration" BackgroundColor="#4A799A"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>